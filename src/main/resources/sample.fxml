<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<VBox alignment="CENTER" spacing="1.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="word_counter_javafx.Controller">
   <children>
      <HBox alignment="CENTER" VBox.vgrow="NEVER">
         <children>
            <TextField fx:id="path" editable="false" text="please choose a file" HBox.hgrow="ALWAYS" />
            <Button fx:id="file" contentDisplay="CENTER" mnemonicParsing="false" onAction="#chooseFile" text="File.." textAlignment="CENTER" textOverrun="CLIP" HBox.hgrow="NEVER">
               <HBox.margin>
                  <Insets bottom="1.0" left="7.0" right="7.0" top="1.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
      <Label fx:id="result" contentDisplay="CENTER" graphicTextGap="10.0" text="no file has been chosen yet" textAlignment="CENTER" VBox.vgrow="ALWAYS">
         <VBox.margin>
            <Insets bottom="10.0" left="1.0" right="1.0" top="10.0" />
         </VBox.margin>
      </Label>
   </children>
   <padding>
      <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
   </padding>
</VBox>
